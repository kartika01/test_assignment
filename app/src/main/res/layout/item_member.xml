<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/white_bg">

        <TextView
            android:id="@+id/nameMemberTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Kartika"
            android:padding="@dimen/_5sdp"
            android:textAlignment="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/ageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Age"
            android:padding="@dimen/_5sdp"
            android:textAlignment="center"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/nameMemberTv"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/phnTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="8847525586"
            android:padding="@dimen/_5sdp"
            android:lineSpacingExtra="2dp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/ageTv"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/emailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="abc@gmail.com"
            android:padding="@dimen/_5sdp"
            android:lineSpacingExtra="2dp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/phnTv"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/favTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/mark_as_favorite"
            android:padding="@dimen/_5sdp"
            android:lineSpacingExtra="2dp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/light_blue"
            app:layout_constraintTop_toBottomOf="@+id/viewMembersTv"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>